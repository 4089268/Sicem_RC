@namespace SICEM_Blazor.Shared
@using Syncfusion.Blazor.ProgressBar

@if(Busy) {
    <div class="busy-control">
        <div class="busy-content">
            <div>@ContentText</div>

            <progress style="width:100%; height:20px; margin-top:5px;"></progress>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ContentText { get; set; }

    [Parameter]
    public bool Busy { get; set; }

}