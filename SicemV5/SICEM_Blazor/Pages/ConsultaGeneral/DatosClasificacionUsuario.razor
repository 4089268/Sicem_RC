<div class="grid-dcu">

    <div class="grid-item" style="grid-area:1/1/2/2">
        <div class="label"> Giro</div>
        <input type="text" value="@DatosConsultaGral.Giro" readonly />
    </div>
    <div class="grid-item" style="grid-area:2/1/3/2">
        <div class="label"> Tipo Grupo</div>
        <input type="text" value="@DatosConsultaGral.Grupo" readonly />
    </div>
    <div class="grid-item" style="grid-area:3/1/4/2">
        <div class="label"> Clase Usuario</div>
        <input type="text" value="@DatosConsultaGral.ClaseUsuario" readonly />
    </div>

    <div class="grid-item" style="grid-area:1/2/2/3">
        <div class="label"> Zona</div>
        <input type="text" value="@DatosConsultaGral.Zona" readonly />
    </div>
    <div class="grid-item" style="grid-area:2/2/3/3">
        <div class="label"> Tipo Factible</div>
        <input type="text" value="@DatosConsultaGral.TipoFactible" readonly />
    </div>
    <div class="grid-item" style="grid-area:3/2/4/3">
        <div class="label"> Hidrocircuito</div>
        <input type="text" value="@DatosConsultaGral.Hidrocircuito" readonly />
    </div>


    <div class="grid-item" style="grid-area: 1/3/2/4">
        <div class="d-flex pl-2" style="grid-area: 1/1/2/3;">
            @if (DatosConsultaGral.AltoConsumidor) {
                <input class="mr-2 my-auto" type="checkbox" checked disabled />            }
            else {
                <input class="mr-2 my-auto" type="checkbox" disabled />
            }
            <label class="my-auto" style="font-size:1rem; font-weight:600;">Es Alto Consumidor</label>
        </div>
    </div>
    <div class="grid-item" style="grid-area: 2/3/3/4">
        <div class="d-flex pl-2" style="grid-area: 1/1/2/3;">
            @if (DatosConsultaGral.EsMacromedidor) {
                <input class="mr-2 my-auto" type="checkbox" checked disabled /> }
            else {
                <input class="mr-2 my-auto" type="checkbox" disabled />
            }
            <label class="my-auto" style="font-size:1rem; font-weight:600;">Es Macromedidor</label>
        </div>
    </div>
    <div class="grid-item" style="grid-area: 3/3/4/4">
        <div class="d-flex pl-2" style="grid-area: 1/1/2/3;">
            @if (DatosConsultaGral.TienePozo) {
                <input class="mr-2 my-auto" type="checkbox" checked disabled /> }
            else {
                <input class="mr-2 my-auto" type="checkbox" disabled />
            }
            <label class="my-auto" style="font-size:1rem; font-weight:600;">Tiene Pozo</label>
        </div>
    </div>


</div>

<style>
    .grid-dcu {
        width: 100%;
        display: grid;
        grid-template-columns: 3fr 3fr 2fr;
        grid-template-rows: 2.2rem 2.2rem 2.2rem;
        grid-gap: 0.2rem 0.2rem;
    }

        .grid-dcu .grid-item {
        display: grid;
        grid-template-columns: 9rem 1fr;
        grid-template-rows: 1fr;
        align-items: center;
        height: 1.5rem;
    }

        .grid-dcu .label {
            grid-column: 1/2;
            font-size: .9rem;
            text-align: right;
            padding-right: 0.5rem;
            font-weight: 600;
        }

        .grid-dcu input[type=text] {
            grid-column: 2/3;
            font-size: 0.9rem;
            border-radius: 0 !important;
            box-shadow: none !important;
            font-weight: 600;
            margin-left:.5rem;
        }

        .grid-dcu input[type=checkbox] {
            box-shadow: none !important;
        }
</style>

@code {
    [Parameter] public ConsultaGralResponse DatosConsultaGral { get; set; }
}
